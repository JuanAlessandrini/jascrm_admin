{% extends 'dashboard/dashboard_base.html.twig' %}

{% set title = 'Proveedores' %}

{% block content %}
   
    {% embed 'dashboard/_content_table.html.twig'%}
        {% block buttons %}
                <button type="button" onclick="showFormLg('{{path('app_vendor_new')}}')" class="btn btn-primary me-2 ">
                    <span class="tf-icons bx bx-add-alt"></span> Nuevo
                </button>
        {% endblock %}
        {% block table %}
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente/Proveedor</th>
                        <th>CUIT</th>
                        <th>Ciudad</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for vendor in vendors %}
                        <tr>
                            
                            <td>{{vendor.id}}</td>
                            <td><strong>{{vendor.name}}</strong></td>
                            <td>{{vendor.cuit}}</td>
                            <td>{{vendor.city}}</td>

                            <td><span class="badge bg-label-{{vendor.enabled ? 'primary' : 'danger'}} me-1">{{vendor.enabled ? 'Activo' : 'Inactivo'}}</span></td>
                            <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                <a class="dropdown-item" onclick="showFormLg('{{path('app_vendor_edit', {id: vendor.id})}}')"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                
                                </div>
                            </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
