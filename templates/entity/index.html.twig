{% extends 'base.html.twig' %}

{% block title %}Entity index{% endblock %}

{% block body %}
    <h1>Entity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Has_impuestos</th>
                <th>Has_percepcion</th>
                <th>Has_retencion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.hasImpuestos ? 'Yes' : 'No' }}</td>
                <td>{{ entity.hasPercepcion ? 'Yes' : 'No' }}</td>
                <td>{{ entity.hasRetencion ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_entity_show', {'id': entity.id}) }}">show</a>
                    <a href="{{ path('app_entity_edit', {'id': entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entity_new') }}">Create new</a>
{% endblock %}
