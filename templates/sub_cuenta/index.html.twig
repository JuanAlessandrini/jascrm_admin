{% extends 'dashboard/dashboard_base.html.twig' %}

{% block title %}SubCuentas{% endblock %}

{% block content %}
    <h1>SubCuentas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_cuentum in sub_cuentas %}
            <tr>
                <td>{{ sub_cuentum.id }}</td>
                <td>{{ sub_cuentum.tipo }}</td>
                <td>{{ sub_cuentum.name }}</td>
                <td>
                    {# <a href="{{ path('app_sub_cuenta_show', {'id': sub_cuentum.id}) }}">show</a> #}
                    <a href="{{ path('app_sub_cuenta_edit', {'id': sub_cuentum.id}) }}"><i class="bx bx-edit-alt me-1"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_sub_cuenta_new') }}">Nueva</a>
{% endblock %}
