{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ document.createdAt ? document.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ document.modifiedAt ? document.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Campania</th>
                <td>{{ document.campania }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ document.codigo }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ document.numero }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ document.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_document_index') }}">back to list</a>

    <a href="{{ path('app_document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
