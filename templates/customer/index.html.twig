{% extends 'dashboard/dashboard_base.html.twig' %}

{% set title = 'Clientes' %}

{% block content %}
   
    
        <div>
         <h4>Clientes</h4>
            <button type="button" onclick="showFormLg('{{path('app_customer_new')}}');" class="btn btn-primary me-2 ">
                <span class="tf-icons bx bx-add-alt"></span> Nuevo
            </button>
            <div class="card card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>CUIT</th>
                            <th>Ciudad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cliente in clientes %}
                        <tr>
                            <td>{{ cliente.id }}</td>
                            <td>{{ cliente.name }}</td>
                            <td>{{ cliente.cuit }}</td>
                            <td>{{ cliente.city }}</td>
                            <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                <a class="dropdown-item" onclick="showFormLg('{{path('app_customer_edit', {id: cliente.id})}}')"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i>Delete</a>
                                </div>
                            </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>
       
{% endblock %}
